{
  "name": "evi-backend",
  "version": "0.5.0",
  "description": "",
  "main": "src/server.ts",
  "_moduleAliases": {
    "@": "src"
  },
  "scripts": {
    "start": "ts-node --transpile-only src/server.ts",
    "dev:back": "env-cmd -f ../.env.local nodemon --watch 'src/**/*' --ext 'ts' --exec 'ts-node' src/server.ts",
    "test": "jest",
    "test:all": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:core": "jest --testPathPattern=core",
    "test:auth": "jest --testPathPattern=auth",
    "test:admin": "jest --testPathPattern=admin",
    "test:modules": "jest --testPathPattern=modules",
    "test:quick": "npm run ts-check",
    "test:debug": "jest --verbose --detectOpenHandles",
    "ts-check": "tsc --noEmit",
    "build": "rimraf dist && tsc && npm run copy-assets",
    "copy-assets": "cp -r src/core/keys dist/",
    "serve": "node dist/server.js",
    "build:prod": "NODE_ENV=production rimraf dist && tsc && npm run copy-assets"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/server-postgres": "^0.6.2",
    "@types/cookie-parser": "^1.4.9",
    "ajv": "^8.17.1",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "env-cmd": "^11.0.0",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
