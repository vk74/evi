{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": ["es2020", "esnext.asynciterable"],
      // Удалён параметр allowJs, так как весь код теперь в TypeScript
      "checkJs": false,         // Отключаем проверку типов в JS файлах на начальном этапе
      "outDir": "./dist",       // Скомпилированные файлы
      "rootDir": "./src",       // Исходный код
      "strict": true,           // Включаем строгий режим
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "sourceMap": true,        // Добавляем source maps для отладки
      "baseUrl": "./",          // Базовый путь для резолвинга модулей
      "experimentalDecorators": true,     // Поддержка декораторов
      "emitDecoratorMetadata": true,      // Метаданные для декораторов
      "types": ["node", "express", "jest"],       // Добавляем типы Node.js, Express и Jest
      "paths": {                          // Алиасы для путей (опционально)
        "@/*": ["src/*"]
      },
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*",
      "src/**/*.ts",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",       // Исключаем тестовые файлы с суффиксом .test.ts
      "**/*.spec.ts",       // Исключаем тестовые файлы с суффиксом .spec.ts
      "**/__tests__/**",    // Исключаем папки __tests__
      "src/tests/**",       // Исключаем отдельную папку tests
      "coverage/**"         // Исключаем папку с отчетами покрытия
    ]
  }