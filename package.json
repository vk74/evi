{
  "name": "ev2",
  "version": "0.5.0",
  "description": "EV2 Application - Backend, Frontend, and Database",
  "private": true,
  "scripts": {
    "version:sync": "node deployment/sync-version.js",
    "dev:docker": "node deployment/dev-docker.js",
    "install:all": "cd back && npm install && cd ../front && npm install",
    "build:all": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd back && npm run build",
    "build:frontend": "cd front && npm run build",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd back && npm test",
    "test:frontend": "cd front && npm run test-front:all",
    "dev:backend": "cd back && npm run dev",
    "dev:frontend": "cd front && npm run serve:dev",
    "start:backend": "cd back && npm start",
    "start:frontend": "cd front && npm run serve",
    "clean": "rm -rf back/dist front/dist back/node_modules front/node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "local:build": "node deployment/build.js"
  },
  "keywords": [
    "ev2",
    "backend",
    "frontend",
    "database",
    "postgresql",
    "vue",
    "express",
    "typescript"
  ],
  "author": "EV2 Team",
  "license": "ISC",
  "devDependencies": {
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
