# ev2 Production Environment Configuration Template
# Version: 1.0
# Description: Template for production environment variables
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application version and environment
APP_VERSION={{APP_VERSION}}
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database settings
POSTGRES_DB=maindb
POSTGRES_USER=app_service
POSTGRES_PASSWORD={{POSTGRES_PASSWORD}}
POSTGRES_PORT=5432

# Database connection settings
PGHOST=ev2-database
PGPORT=5432
PGDATABASE=maindb
PGUSER=app_service
PGPASSWORD={{POSTGRES_PASSWORD}}

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API settings
API_PORT=3000
FRONTEND_API_URL={{FRONTEND_API_URL}}

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend settings
FRONTEND_PORT=8080

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT secret for token signing
JWT_SECRET={{JWT_SECRET}}

# JWT public and private keys (file paths)
JWT_PUBLIC_KEY={{JWT_PUBLIC_KEY}}
JWT_PRIVATE_KEY={{JWT_PRIVATE_KEY}}

# =============================================================================
# DOCKER IMAGES
# =============================================================================

# Docker image tags for production
DATABASE_IMAGE={{DATABASE_IMAGE}}
BACKEND_IMAGE={{BACKEND_IMAGE}}
FRONTEND_IMAGE={{FRONTEND_IMAGE}}

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL certificate paths (if using custom certificates)
SSL_CERT_PATH={{SSL_CERT_PATH}}
SSL_KEY_PATH={{SSL_KEY_PATH}}

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Admin user settings
ADMIN_USERNAME={{ADMIN_USERNAME}}
ADMIN_PASSWORD={{ADMIN_PASSWORD}}
ADMIN_EMAIL={{ADMIN_EMAIL}}

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
